<div class="well col-md-11">
  <p>Posted by <strong><%= comment.author %></strong>
    at <%= comment.created_at.to_formatted_s(:long_ordinal) %>

  <% if current_user?(comment.article.user) %>
    <%= link_to 'Moderate comment', article_comment_path(@article, comment),
                                    method: :delete,
                                    data: { confirm: 'Are your sure you want to delete this comment?' },
                                    class: 'btn btn-warning btn-xs' %>
  <% end %>
  </p>

  <p><%= comment.body %></p>
</div>
